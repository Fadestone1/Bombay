void tirage1(){
    int nb1=0, nb2=0, nb3=0, nb4=0;

    while (nb1==nb2 || nb1==nb3 || nb1==nb4 || nb2==nb3 || nb2==nb4 || nb3==nb4){
    nb1=rand()%4+1; //affectation nombre entre 1 et 4 Ã  la variable
    nb2=rand()%4+1;
    nb3=rand()%4+1;
    nb4=rand()%4+1;
    }
    printf("%d\n%d\n%d\n%d\n",nb1,nb2,nb3,nb4); //verification visuelle
    }

