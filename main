struct joueur {
        char nom;
        int nbaction;
        int casejeu;
        int roupie;
        int palais;
        int jetville;
        int jetcomptoir;
        int jetclient;
        int ballot [2];

    };
typedef struct joueur S_jou;

struct casej {
    int ville;
    int palais;
    char jetons [2];
    char joueur;

};
typedef struct casej casej;

    void remplitabballot (){

        tabballot[0] = 3;
